{
  "type": "object",
  "required": [
    "username",
    "password"
  ],
  "properties": {
    "username": {
      "type": "string",
      "minLength": 2,
      "maxLength": 20,
      "pattern": "^[a-z0-9]*$"
    },
    "password": {
      "type": "string",
      "minLength": 4,
      "maxLength": 30
    },
    "secret": {
      "type": "string",
      "minLength": 8,
      "maxLength": 20
    }
  }
}
