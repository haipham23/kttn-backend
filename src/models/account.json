{
  "type": "object",
  "required": [
    "username",
    "password"
  ],
  "properties": {
    "fullName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50
    },
    "username": {
      "type": "string",
      "minLength": 2,
      "maxLength": 20,
      "pattern": "^[a-z0-9]*$"
    },
    "password": {
      "type": "string",
      "minLength": 4,
      "maxLength": 30
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "isActive": {
      "type": "boolean"
    }
  }
}
